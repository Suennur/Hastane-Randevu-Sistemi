@model Hastane.Models.Appointment

@{
    ViewData["Title"] = "Delete";
}


<h3>Are you sure you want to delete this?</h3>
<div>
    
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.doctor)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.doctor.doctorName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.patient)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.patient.PatientName)
            @Html.DisplayFor(model => model.patient.PatientSurname)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="AppoId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> 
        <a asp-action="Index"><label class="btn btn-outline-secondary">Back to List</label></a>
    </form>
</div>
