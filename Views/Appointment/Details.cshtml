@model Hastane.Models.Appointment

@{
    ViewData["Title"] = "Details";
}


<div>
    <h4>Appointment Details</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.doctor)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.doctor.doctorName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.patient)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.patient.PatientName)
            @Html.DisplayFor(model => model.patient.PatientSurname)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.doctor.workTime)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.doctor.workTime)
            
        </dd>

    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.AppoId"><label class="btn btn-outline-info">Edit</label></a> 
    <a asp-action="Index"><label class="btn btn-outline-secondary">Back to List</label></a>
</div>
