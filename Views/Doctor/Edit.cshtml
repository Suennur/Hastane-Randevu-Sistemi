@model Hastane.Models.Doctor

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Doctor</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="doctorId" />
            <div class="form-group">
                <label asp-for="doctorName" class="control-label"></label>
                <input asp-for="doctorName" class="form-control" />
                <span asp-validation-for="doctorName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="polic" class="control-label"></label>
                <select asp-for="polic" class="form-control" asp-items="ViewBag.PoliclinicList"></select>
                <span asp-validation-for="polic" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="workTime" class="control-label"></label>
                <input asp-for="workTime" class="form-control" />
                <span asp-validation-for="workTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <br />
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="Index"><label class="btn btn-outline-secondary">Back to List</label></a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
