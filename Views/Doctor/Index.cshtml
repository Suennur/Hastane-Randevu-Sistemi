@model IEnumerable<Hastane.Models.Doctor>

@{
    ViewData["Title"] = "Doctors";
}

<h1>Doctors</h1>

<p>
    <a asp-action="Create"><label class="btn btn-outline-info">Create New</label></a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.doctorName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.policlinic.PolicName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.workTime)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.doctorName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.policlinic.PolicName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.workTime)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.doctorId"><label class="btn btn-outline-info">Edit</label></a> |
                <a asp-action="Details" asp-route-id="@item.doctorId"><label class="btn btn-outline-secondary">Details</label></a> |
                <a asp-action="Delete" asp-route-id="@item.doctorId"><label class="btn btn-outline-danger">Delete</label></a>
            </td>
        </tr>
}
    </tbody>
</table>
