@model Hastane.Models.Appointment

@{
    ViewData["Title"] = "Make Appointment";
}

<h1>Make Appointment</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="MakeAppointment">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="doctor" class="control-label"></label>
                <select asp-for="DoctorId" class="form-control" asp-items="ViewBag.DoctorList"></select>
                <span asp-validation-for="DoctorId" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="OK" class="btn btn-primary" />
                <a asp-action="Index"><label class="btn btn-outline-secondary">Back to List</label></a>
            </div>
        </form>

    </div>
    
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
